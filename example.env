# =============================================================================
# CraftyXhub FastAPI Project - Environment Variables Example
# =============================================================================
# Copy this file to api/.env and update the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./craftyhub.db
# For PostgreSQL: postgresql://username:password@localhost:5432/craftyhub
# For MySQL: mysql://username:password@localhost:3306/craftyhub

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# JWT AUTHENTICATION CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-256-bits-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
TOKEN_ISSUER=craftyhub

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-256-bits-long
LOGIN_RATE_LIMIT_ATTEMPTS=5
LOGIN_RATE_LIMIT_WINDOW=900

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=CraftyXhub
APP_VERSION=1.0.0
APP_DESCRIPTION=CraftyXhub Blog Platform API
APP_ENV=development
DEBUG=true
API_VERSION=v1
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
ENABLE_PROFILING=false
AUTO_RELOAD=true
WORKERS=1

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=[".jpg", ".jpeg", ".png", ".gif", ".pdf", ".webp"]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
QUERY_TIMEOUT=30
API_TIMEOUT=60
CACHE_EXPIRE_TIME=3600

# =============================================================================
# PRODUCTION SETTINGS (uncomment and configure for production)
# =============================================================================
# APP_ENV=production
# DEBUG=false
# DATABASE_URL=postgresql://username:password@localhost:5432/craftyhub_prod
# JWT_SECRET_KEY=your-production-secret-key-very-long-and-secure
# SECRET_KEY=your-production-secret-key-very-long-and-secure
# REDIS_URL=redis://localhost:6379/0
# CORS_ORIGINS=["https://yourdomain.com"]
# LOG_LEVEL=WARNING 