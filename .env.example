# CraftyXhub FastAPI Environment Configuration

# Application Settings
APP_NAME=CraftyXhub
APP_VERSION=1.0.0
APP_DESCRIPTION="CraftyXhub Blog Platform API"
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:root@localhost:5432/xhub
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Authentication & Security
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
TOKEN_ISSUER=craftyhub

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Redis Configuration (for caching and token blacklisting)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
LOGIN_RATE_LIMIT_ATTEMPTS=5
LOGIN_RATE_LIMIT_WINDOW=900  # 15 minutes in seconds

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_EXTENSIONS=[".jpg", ".jpeg", ".png", ".gif", ".pdf"]

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@craftyhub.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log

# Performance Settings
QUERY_TIMEOUT=30
API_TIMEOUT=60
CACHE_EXPIRE_TIME=3600  # 1 hour in seconds

# Development Settings
ENABLE_PROFILING=false
AUTO_RELOAD=true
WORKERS=1

# Production Settings (override in production)
# WORKERS=4
# DEBUG=false
# LOG_LEVEL=WARNING 